<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF5E5"> <!-- Beige background -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Recipe Title -->
        <TextView
            android:id="@+id/recipeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:fontFamily="sans-serif-medium"
            android:text="Recipe Title"
            android:textColor="#5D4037"
            android:textSize="18sp"
            android:textStyle="bold" />



        <ImageView
            android:id="@+id/recipeImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="8dp"
            android:background="#FFFFFF"
            android:scaleType="centerCrop"
            android:contentDescription="Recipe Image Placeholder" />

        <!-- Ingredients Section -->
        <TextView
            android:id="@+id/ingredientsLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ingredients:"
            android:textSize="16sp"
            android:textColor="#5D4037"
            android:fontFamily="sans-serif-medium"
            android:layout_marginTop="12dp" />

        <TextView
            android:id="@+id/ingredientsText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Ingredient 1\n• Ingredient 2\n• Ingredient 3"
            android:textSize="14sp"
            android:textColor="#333333"
            android:fontFamily="sans-serif"
            android:layout_marginTop="4dp" />

        <!-- Steps Section -->
        <TextView
            android:id="@+id/stepsLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Steps:"
            android:textSize="16sp"
            android:textColor="#5D4037"
            android:fontFamily="sans-serif-medium"
            android:layout_marginTop="12dp" />

        <TextView
            android:id="@+id/stepsText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1. Step one\n2. Step two\n3. Step three"
            android:textSize="14sp"
            android:textColor="#333333"
            android:fontFamily="sans-serif"
            android:layout_marginTop="4dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:gravity="start">

            <ImageView
                android:id="@+id/favoriteIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="5dp"
                android:contentDescription="Favorite Icon"
                android:src="@drawable/ic_favorite_border"
                app:tint="#FF7043" />

            <ImageView
                android:id="@+id/editButton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="5dp"
                android:contentDescription="Edit Icon"
                android:src="@drawable/edit_icon"
                app:tint="#FF7043" />

            <ImageView
                android:id="@+id/deleteButton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:tint="#FF7043"
                android:src="@drawable/ic_delete"
                android:contentDescription="Delete Recipe" />


            <!-- Edit Button -->
        </LinearLayout>

        <!-- Horizontal Line -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="#FF7043" />


    </LinearLayout>
</ScrollView>
